<%- include ('../layouts/header') %>
<%- include ('../layouts/header_options') %>
<h2><%= title %></h2>
<p>
    <a href="/usuario/create/" class="btn btn-success">
        Agregar un usuario
    </a>
</p>

<% if (data.length >= 1) { %>
    <table class="table">
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>

        <% for(var i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].usuario %>
                </td>
                <td>
                    <%= data[i].descripcion %>
                </td>
                <td>
                    <a href="/usuario/edit/<%= data[i].id %>" class="btn btn-success">Cambiar Clave</a>
                    <a href="/usuario/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
            <% } %>

    </table>
<% } else { %>
    <table class="table">
    </table>
<% } %>



<%- include ('../layouts/footer') %>
